<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:cardBackgroundColor="#80ffffff"
        app:cardElevation="0dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:paddingBottom="8dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="30"
                android:textColor="@color/colorAccent"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/year_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/day"
                android:layout_alignTop="@+id/day"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/day"
                android:gravity="center"
                android:text="2018.08"
                android:textColor="@android:color/darker_gray"
                android:textSize="10dp" />


            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/year_month"
                android:layout_below="@+id/year_month"
                android:layout_marginTop="2dp"
                android:gravity="left"
                android:lines="2"
                android:text="很想很想跟你在一起"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>